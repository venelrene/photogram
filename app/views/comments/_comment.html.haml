-#%h2 comment
.user-name
  = comment.user.user_name
  .comment-content
    = comment.content
  - if comment.user == current_user
    = link_to post_comments_path(post, comment), method: :delete, data: {post_id: post.id, value: post.comments.count, confirm: "Are you sure?" }, remote: true, id: "delete-#{comment.id}", class: "delete-comment" do
      %span(class="glyphicon glyphicon-remove delete-comment-icon")