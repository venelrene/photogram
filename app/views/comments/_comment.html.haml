#comment
  .user-name
    = link_to comment.user.user_name, profile_path(comment.user.user_name)
  .comment-content
    = comment.content
  - if comment.user == current_user
    = link_to post_comments_path(post, comment), method: :delete,
                                                data: { confirm: "Are you sure?" },
                                                remote: true,
                                                id: "delete-#{comment.id}" do
      %span(class="glyphicon glyphicon-remove delete-comment")